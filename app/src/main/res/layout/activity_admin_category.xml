<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/swimming"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="17dp"
            android:src="@drawable/swimming" />

        <ImageView
            android:id="@+id/running"
            android:layout_width="103dp"
            android:layout_height="69dp"
            android:layout_marginLeft="17dp"
            android:src="@drawable/running" />

        <ImageView
            android:id="@+id/yoga"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="17dp"
            android:src="@drawable/yoga" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/fitness"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="17dp"
            android:src="@drawable/gym" />

        <ImageView
            android:id="@+id/athletic"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginLeft="17dp"
            android:src="@drawable/athletic" />

        <ImageView
            android:id="@+id/boating"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="17dp"
            android:src="@drawable/boating" />



    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/basketball"
            android:layout_width="82dp"
            android:layout_height="64dp"
            android:layout_marginLeft="17dp"
            android:src="@drawable/basketball" />

        <ImageView
            android:id="@+id/football"
            android:layout_width="93dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="17dp"
            android:src="@drawable/football" />

        <ImageView
            android:id="@+id/cricket"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="17dp"
            android:src="@drawable/cricket" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear3_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/golf"
            android:layout_width="80dp"
            android:layout_height="82dp"
            android:layout_marginLeft="17dp"
            android:src="@drawable/golf" />


        <ImageView
            android:id="@+id/fishing"
            android:layout_width="90dp"
            android:layout_height="82dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="17dp"
            android:src="@drawable/fishing" />

        <ImageView
            android:id="@+id/tennis"
            android:layout_width="93dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="17dp"
            android:src="@drawable/tennis" />

    </LinearLayout>


    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/admin_logout_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:text="Check New Orders"
        android:textSize="20dp"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:text="Log out"
        android:textSize="20dp"
        android:textAllCaps="false"
        />
</RelativeLayout>